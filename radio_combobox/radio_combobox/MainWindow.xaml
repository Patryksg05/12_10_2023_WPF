<Window x:Class="radio_combobox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:radio_combobox"
        mc:Ignorable="d"
        Title="Radio - Combobox" Height="350" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <!--COMBOBOX-->
            <StackPanel Orientation="Vertical" Margin="10 5 0 0">

                <StackPanel 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <TextBox
                        x:Name="new_combobox_item_text_box"
                        Width="130"/>

                    <Button
                        Click="add_new_cb_item_click"
                        Content="ADD"
                        Width="50"
                        />

                    <Button
                        Click="display_cb_item_click"
                        Content="DISPLAY"
                        Width="50"
                        />

                </StackPanel>

                <StackPanel 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
                    
                    <ComboBox
                        x:Name="combo_box"
                        Width="80"
                        Margin="0 10 20 10"
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding comboBoxItems}"
                        SelectedItem="{Binding selectedComboBoxItem}"
                    />

                    <TextBlock
                        x:Name="selected_cb_item_text_block"
                        Text="Selected value"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        />
                    
                </StackPanel>

                <TextBlock
                    x:Name="if_sth_selected_text_block"
                    Text="If option2 is selected display"
                    TextAlignment="Center"
                    Visibility="Hidden"
                    />

            </StackPanel>
            
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="10 5 0 0">

                <StackPanel 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <TextBox
                        x:Name="new_radiobox_text_box"
                        Width="130"/>

                    <Button
                        Click="add_new_radio_click"
                        Content="ADD"
                        Width="50"
                        />

                    <Button
                        Click="display_radio_click"
                        Content="DISPLAY"
                        Width="50"
                        />

                </StackPanel>

            </StackPanel>

            <TextBlock
                x:Name="selected_radio_btn_value_text_block"
                Text="Selected value from radio"
                TextAlignment="Center"
                Visibility="Hidden"
                FontWeight="Bold"
                />

            <StackPanel 
                x:Name="radio_buttons_stack_panel"
                Orientation="Vertical"
                Margin="0 10 0 0"
                HorizontalAlignment="Center">

                <RadioButton
                    x:Name="radio_btn1"
                    GroupName="radio_btns"
                    Content="Option1" />

                <RadioButton
                    x:Name="radio_btn2"
                    GroupName="radio_btns"
                    Content="Option2" />

            </StackPanel>
            
        </StackPanel>

        <StackPanel
            Grid.Column="1"
            Orientation="Vertical">

            <TextBlock
                Text="Select a club to display a logo: "
                FontWeight="Bold"
                Margin="10 2 0 0"
                />


            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0 10 0 10"    
                >

                <TextBox
                    x:Name="new_radio_club_text_box"
                    Width="130"/>

                <Button
                        Click="add_new_club_click"
                        Content="ADD"
                        Width="50"
                        />

                <Button
                        Click="display_club_click"
                        Content="SHOW"
                        Width="50"
                        />

            </StackPanel>


            <StackPanel 
                Orientation="Horizontal">
                
                <StackPanel
                    x:Name="radio_images_stack_panel"
                    Orientation="Vertical"
                    Margin="5 5 0 0">

                    <RadioButton
                        x:Name="bvb_radio"
                        GroupName="radio_clubs"
                        Content="BVB"
                        IsChecked="True"
                        />

                    <RadioButton
                        x:Name="bayern_radio"
                        GroupName="radio_clubs"
                        Content="BAYERN"
                        />

                </StackPanel>

                <Image
                    x:Name="image"
                    Source="../../../images/defualt.png"
                    HorizontalAlignment="Right"
                    Width="30"
                    Margin="0 5 -50 0"/>

            </StackPanel>
            
        </StackPanel>

        <StackPanel 
            Orientation="Vertical"
            Grid.Column="1"
            Grid.Row="1">

            <TextBlock
                Text="Generate A Color For a Text"
                TextAlignment="Center"
                FontWeight="bold" />

            <StackPanel
                x:Name="checkbox_stack_panel"
                Orientation="Vertical">

                <CheckBox
                    x:Name="red"
                    Content="Red"/>
                
                <CheckBox
                    x:Name="green"
                    Content="Green"/>

                <CheckBox
                    x:Name="blue"
                    Content="Blue"/>

                <Button
                    Click="generate_colour"
                    Content="GENERATE"
                    Width="80"
                    />

            </StackPanel>

            <TextBlock
                x:Name="color_text_block"
                Text="RESULT TEXT"
                Margin="0 10 0 0"
                TextAlignment="Center"
                FontSize="15"
                Background="Black"
                Foreground="White"/>

        </StackPanel>
 
    </Grid>
</Window>
